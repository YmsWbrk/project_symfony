{% extends 'base.html.twig' %}

{% block title %}HelloWorld!{% endblock %}

{% block body %}
<h1 class="text-center mt-5">{{ title }}</h1>
<hr/>
{% for article in articles |slice(0, 5) %}

{% if article.state == true %}
  <div class="card center" style="width: 18rem;">
  <img class="card-img-top" src="{{ article.img }}" alt="Card image cap">
  <div class="card-body">
  <h5 class="card-title">{{ article.title }}</h5>
   <p class="card-text">{{ article.content |slice(0, 10) }} .....</p>
   <small>{{ article.createdAt ? article.createdAt|date('d/m/Y') : '' }}</small>
   <a href="{{ path('app_register') }}">S'inscrire</a>
  </div>
</div>
<hr/>
{% endif %}
{% endfor %}
{% endblock %}
